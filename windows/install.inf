[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
; installs the cursor scheme
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

[Scheme.Cur]
; installed cursors
precision.cur
move.cur
alt.cur
wib.cur
normal.cur
diagresz1.cur
diagresz2.cur
help.cur
horzresz.cur
busy.cur
link-clean.cur
unavailable.cur
handwriting.cur
text.cur
vertresz.cur

[Strings]
CUR_DIR	= "Cursors\PXGA_CURS"
SCHEME_NAME	= "PXGA Cursors (Standard Link Select)"
pointer       = "normal.cur"
help          = "help.cur"
work          = "wib.cur"
busy          = "busy.cur"
text          = "text.cur"
unavailiable  = "unavailable.cur"
vert          = "vertresz.cur"
horz          = "horzresz.cur"
dgn1          = "diagresz1.cur"
dgn2          = "diagresz2.cur"
move          = "move.cur"
link          = "link-clean.cur"
cross         = "precision.cur"
hand          = "handwriting.cur"
alternate     = "alt.cur"